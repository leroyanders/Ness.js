    "browser-sync-webpack-plugin": "^2.3.0",
    "cors": "^2.8.5",
    "css-loader": "^6.7.1",
    "css-modules-typescript-loader": "^4.0.1",
    "express": "^4.17.1",
    "mini-css-extract-plugin": "^2.6.1",
    "node": "^12.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^7.0.0",
    "pug": "^2.0.4",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "sass-loader": "^13.0.1",
    "style-loader": "^3.3.1"
  },
  "devDependencies": {
