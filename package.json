{
  "name": "react-ssr-hotreload-app",
  "version": "1.1.1",
  "description": "CRA with Express.js and webpack-hot-middleware",
  "main": "server/index.js",
  "scripts": {
    "server": "NODE_ENV=development nodemon ./server/index.js",
    "client": "NODE_ENV=development webpack -d --config webpack.config.js --mode development --progress --watch",
    "build:css": "npx tailwindcss -i client/styles/tailwind.module.scss -o client/styles/tailwind.scss --watch",
    "start:ssr": "npm-run-all server client",
    "build": "NODE_ENV=production webpack",
    "test": "jest"
  },
  "author": "Leroy Wagner",
  "github_author": "https://github.com/leroywagner",
  "license": "MIT",
